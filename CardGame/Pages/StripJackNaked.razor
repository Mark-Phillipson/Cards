    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Initialize Quick Draw hover-to-click
            dotNetRef = DotNetObjectReference.Create(this);
            await JS.InvokeVoidAsync("initStripJackNakedHover", dotNetRef, quickDrawEnabled, hoverDelayMs);

            // Move keyboard focus to the Start Game button so pressing Enter starts the game
            try
            {
                await JS.InvokeVoidAsync("focusElement", startButton);
            }
            catch
            {
                // ignore JS errors — focusing is best-effort
            }
        }
        else if (quickDrawEnabled)
        {
            // Refresh hover listeners after DOM updates
            try
            {
                await JS.InvokeVoidAsync("refreshStripJackNakedHoverListeners");
            }
            catch
            {
                // Function may not exist in cached version
            }
        }

        // Determine whether Play Card is enabled now
        var playEnabled = IsHumanTurn && !GameOver && CanPlay;
        if (playEnabled && !prevPlayEnabled)
        {
            // play button has just become available — move focus so Enter will trigger it
            try
            {
                await JS.InvokeVoidAsync("focusElement", playButton);
            }
            catch
            {
                // ignore JS errors
            }
        }
        prevPlayEnabled = playEnabled;
    }

    // Quick Draw Mode JSInvokable methods
    [JSInvokable]
    public void UpdateSjnHoverProgress(int buttonIndex, int percent)
    {
        if (percent == 0)
            hoverProgress.Remove(buttonIndex);
        else
            hoverProgress[buttonIndex] = percent;
        StateHasChanged();
    }

    [JSInvokable]
    public async Task OnSjnButtonHoverClick(string buttonId)
    {
        if (!quickDrawEnabled) return;
        hoverProgress.Clear();

        switch (buttonId)
        {
            case "play-card":
                if (IsHumanTurn && !GameOver && CanPlay)
                {
                    await HumanPlay();
                }
                break;
            case "start-game":
                await StartGame();
                break;
        }
        StateHasChanged();
    }

